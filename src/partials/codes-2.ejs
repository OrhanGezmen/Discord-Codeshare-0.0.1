<body class="bg-gray-100">
  <div class="container mx-auto p-8">
    <h1 class="text-3xl mb-4">Code Snippets</h1>
    <div id="codeList" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4"></div>
      <% code.forEach(code =>{%>
    <div id="snippetModal" class="hidden fixed inset-0 flex items-center justify-center bg-black bg-opacity-50">
      <div class="bg-white p-4 rounded shadow">
        <img id="snippetImage" class="mb-4" src="/data/<%= code.codePhoto %>" alt="Snippet Image">
        <textarea id="snippetCode" class="w-full p-2 rounded" rows="10" readonly><%= code.codeText %></textarea>
        <div class="flex justify-end mt-4">
          <button id="deleteButton" class="bg-red-500 text-white py-2 px-4 rounded mr-2 hidden">Kodu Sil</button>
          <button id="editButton" class="bg-yellow-500 text-white py-2 px-4 rounded mr-2 hidden">Kodu Düzenle</button>
          <button id="closeButton" class="bg-blue-500 text-white py-2 px-4 rounded">Kapat</button>
        </div>
      </div>
    </div>
     <%})%>
  </div>

